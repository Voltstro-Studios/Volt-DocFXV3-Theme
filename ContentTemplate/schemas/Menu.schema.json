{
    "$schema": "http://json-schema.org/draft-07/schema##",
    "description": "The schema for the main menu bar",
    "type": "object",
    "required": ["items"],
    "renderType": "Component",
    "properties": {
        "items": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string",
                        "contentType": "href"
                    }
                }
            }
        }
    }
}
